record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

# TODO: find correct syntax of INP command and pass address value

record(ai, "$(P)ID") {
    field(DESC, "PSU ID number")
    field(DTYP, "Soft Channel stream")
    field(PINI, "YES")
    field(INP,  "protocol file, (address_macro), getID")
}

record(waveform, "$(P)DATA:RAW") {
    field(DESC, "Returned raw data from PSU")
    field(NELM, "64")
    field(FTVL, "STRING")
    field(INP,  "protocol file, (address_macro), getDATA")
}

record(waveform, "$(P)STATUS:RAW") {
    field(DESC, "Raw status of PSU")
    field(NELM, "64")
    field(FTVL, "STRING")
    field(INP,  "protocol file, (address_macro), getSTATUS")
}
