record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)ID") {
    field(DESC, "PSU ID number")
    field(DTYP, "stream")
    field(PINI, "YES")
    field(INP,  "@ambrell_easy_heat.proto, getID($(ADDRESS)) $(PORT)")
}

record(waveform, "$(P)DATA:RAW") {
    field(DESC, "Returned raw data from PSU")
    field(DTYP, "stream")
    field(SCAN, "1 second")
    field(NELM, "64")
    field(FTVL, "STRING")
    field(INP,  "@ambrell_easy_heat.proto, getData($(ADDRESS)) $(PORT)")
}

record(waveform, "$(P)STATUS:RAW") {
    field(DESC, "Raw status of PSU")
    field(DTYP, "stream")
    field(SCAN, "1 second")
    field(NELM, "64")
    field(FTVL, "STRING")
    field(INP,  "@ambrell_easy_heat.proto, getStatus($(ADDRESS)) $(PORT)")
}
